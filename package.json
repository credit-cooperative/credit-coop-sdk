{
  "name": "@credit-cooperative/credit-coop-sdk",
  "version": "0.1.0",
  "description": "Type-safe SDK for Credit Coop smart contracts",
  "author": "Credit Cooperative",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/credit-cooperative/credit-coop-sdk.git"
  },
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist/",
    "src/contracts/abis/"
  ],
  "sideEffects": false,
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "clean": "rimraf dist",
    "build": "tsup src/index.ts --format esm,cjs --dts --minify",
    "lint": "eslint \"src/**/*.{ts,tsx}\" \"test/**/*.ts\"",
    "prepublishOnly": "yarn clean && yarn lint && yarn test && yarn build",
    "test": "vitest --coverage"
  },
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "@nomicfoundation/hardhat-viem": "^2.0.6",
    "@types/wait-on": "^5.3.4",
    "@vitest/coverage-v8": "^3.1.4",
    "dotenv": "^16.5.0",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.0",
    "execa": "^9.5.3",
    "hardhat": "^2.24.0",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.1",
    "vitest": "^3.1.4",
    "wait-on": "^8.0.3"
  },
  "packageManager": "yarn@4.9.1",
  "dependencies": {
    "viem": "^2.30.0"
  }
}